<%- include('header') %>

  <body class="inner-pg">

    <!-- dashboard start -->
    <div class="dashboard startpg">
      <!-- aside bar start -->
      <%- include('_sidenavbar') %>
        <!-- aside bar End -->

        <!-- dash board body start -->
        <div class="dashboard-body">

          <div class="pg-banner">
            <a href="javascript:void(0)" class="menuImage2  d-lg-none"> <span class="line1"></span> <span
                class="line2"></span>
              <span class="line3"></span> </a>
            <h2>Settings</h2>
            <div class="bread-crumb">

            </div>
          </div>
          <div class="d-pg-content">
            <div class="default_block  manage-wrap">
              <div class="block_heading">
                <h3>Manage Syncing</h3>
              </div>
              <div class="row">
                <!-- <div class="row synft"> -->
                <div class="col-sm-6 mt-4">Turn <b class="servicesUpdatedlabel">
                    <!-- <%= store.AllSyncingStatus ? 'OFF' :'ON' %> -->
                  </b> all services</div>
                <div class="col-sm-6 text-right ">
                  <div class="sync-action">
                    <input type="checkbox">
                    onclick="toogleHubSageFieldOption(this)" id="switch2" />
                    <label for="switch2"></label>
                  </div>
                </div>
                <!-- </div> -->
              </div>
            </div>

          </div>

          <div class="d-pg-content">
            <div class="default_block  manage-wrap">
              <div class="block_heading">
                <h3>Email Credentials</h3>



              </div>
              <form id="credential-form">
                <div class="row">1




                  <div class="col-md-12">
                    <div class="form-group row">
                      <div class="col-md-3">
                        <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Username : </h4>
                      </div>
                      <div class="inp-with-icon col-md-7">
                        <input type="email" name="username" placeholder="Enter Username" class="form-control"
                          value="<%= store.settings.username %>">
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group row">
                      <div class="col-md-3">
                        <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Passsword : </h4>
                      </div>
                      <div class="inp-with-icon col-md-7">
                        <input type="password" name="password" placeholder="Enter Password" class="form-control"
                          value="<%= store.settings.password %>">
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group row">
                      <div class="col-md-3">
                        <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Port : </h4>
                      </div>
                      <div class="inp-with-icon col-md-7">
                        <input type="text" name="port" placeholder="Enter Port" class="form-control"
                          value="<%= store.settings.port %>">
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group row">
                      <div class="col-md-3">
                        <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Host : </h4>
                      </div>
                      <div class="inp-with-icon col-md-7">
                        <input type="text" name="host" placeholder="Enter Host" class="form-control"
                          value="<%= store.settings.host %>">
                      </div>
                    </div>
                  </div>




                </div>

            </div>
          </div>


          <div class="d-pg-content">
            <div class="default_block  manage-wrap">
              <div class="block_heading">
                <h3>Email Data</h3>

              </div>

              <div class="row">





                <div class="col-md-12">
                  <div class="form-group row">
                    <div class="col-md-3">
                      <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Recipient Email : </h4>
                    </div>
                    <div class="inp-with-icon col-md-7">
                      <input type="email" name="toemail" placeholder="To" class="form-control"
                        value="<%= store.settings.toemail %>">
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group row">
                    <div class="col-md-3">
                      <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Subject : </h4>
                    </div>
                    <div class="inp-with-icon col-md-7">
                      <input type="text" name="subject" placeholder="Subject" class="form-control" value="">
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group row">
                    <div class="col-md-3">
                      <h4 for="type" style="padding: 10px;margin-left: 10px;"> Enter Body : </h4>
                    </div>
                    <div class="inp-with-icon col-md-7">
                      <input type="text" name="body" placeholder="Body" class="form-control"
                        value="<%= store.settings.body %>">
                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group row">

                    <div class="col-md-3">
                      <h4 for="type" style="padding: 10px;margin-left: 10px;"> Type of Attachment :</h4>
                    </div>
                    <div class="col-md-7">
                      <select id="type_data" name="typedata" class="form-control" disabled>
                        <option <%=store.settings.typedata=='Error' ? 'selected' : false%> value="Error">Error log file
                        </option>
                        <!-- <option <%=//store.settings.typedata=='Success' ? 'selected' : false%> value="Success">Success log
                          file</option> -->
                      </select>

                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-3" style="padding: 10px;margin-left: 10px;">
                    <h4>Turn <b class="servicesUpdatedlabel_EMAIL">
                        <%= store.EmailSyncingStatus ? 'OFF' :'ON' %>
                      </b> Email services : </h4>
                  </div>
                  <div class="col-md-1" style="margin-top: -7px;">
                    <div class="sync-action">
                      <input type="checkbox">
                      onclick="toogleHubSageFieldOption_Email(this)" id="switch4" />
                      <label for="switch4"></label>
                    </div>
                    <div class="col-md-8"></div>


                  </div>
                </div>
              </div>



              <div class="col-md-12">
                <div class="form-group row">
                  <div class="col-md-3">
                    <h4 for="type" style="padding: 10px;">Set Cron Timing :</h4>
                  </div>
                  <div id='cron-time' class="col-md-9" style="margin-top: 12px;"></div>
                  <div class="col-md-3"></div>
                  <div class="col-md-7 mt-3"><span id="cront-time-label"></span><input type="hidden" id="timevalue"
                      value="<%= store.settings.crontime %>" /></div>

                </div>
              </div>



              <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-custom btn-block " onclick="getformdata()"
                  style="width: 20%; margin-top: 15px;">Submit Details</button>

              </div>



            </div>
            </form>
          </div>
        </div>



    </div>
    </div>
  </body>
  <script src="assets/js/pages/settings.js"></script>
  <%- include('footer') %>